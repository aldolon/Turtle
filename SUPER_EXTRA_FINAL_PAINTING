reversed_triangle3()
tri.left(225)
rere_triangle5()

#----------------------------------------------------------------------------------------------
#four
tri.up()
tri.goto(-540, 70)
tri.down()
tri.left(45)
reversed_parallelogram()
tri.left(45)
tri.forward(side_2)
tri.left(135)
triangle4()
tri.forward(hypotenuse/2)
tri.left(180)
triangle2()
tri.left(135)
tri.forward(hypotenuse/2)
tri.left(180)
triangle1()
tri.left(180)
tri.forward(cathetus/2)
square()
tri.left(180)
tri.forward(side_1)
tri.left(270)
tri.forward(side_1*2)
tri.left(135)
triangle3()
tri.forward(cathetus/2)
tri.left(225)
triangle5()
#----------------------------------------------------------------------------------------------
#basic_parallelogram
tri.right(90)
tri.up()
tri.goto(-300, 90)
tri.down()
triangle1()
tri.right(135)
tri.forward(hypotenuse)
tri.right(180)
triangle2()
tri.right(180)
tri.forward(side_1)
square()
tri.left(45)
triangle3()
tri.right(90)
triangle4()
tri.left(135)
tri.forward(side_1)
tri.right(45)
tri.forward(side_2)
tri.right(180)
triangle5()
parallelogram()
#------------------------------------------------------------------------------------
tri.hideturtle()
turtle.update()
screen.mainloop()
