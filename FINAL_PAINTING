    tri.fillcolor("brown1")
    tri.begin_fill()
    tri.forward(side_1)
    tri.left(90)
    tri.forward(side_1)
    tri.left(90)
    tri.forward(side_1)
    tri.end_fill()
square()

tri.right(180)
tri.forward(side_1)
tri.right(90)
tri.forward(side_1*2)
tri.left(90)
tri.forward(side_1)
tri.right(180)

def parallelogram():
